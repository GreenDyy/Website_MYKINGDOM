@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Web_MYKINGDOM.ViewModels.ThongTinKhachHangChiTietDataView

<div class="row mt-4">

    <div class="col-4">
        <div class="">
            <h4>Tài khoản của bạn</h4>
            <a class="nav-link mb-3 fw-bold" href="@Url.Action("UserAccount", "User")">Tài khoản</a>
            <a class="nav-link mb-3" href="@Url.Action("UserAccount", "User")">Thông tin tài khoản</a>
            <a class="nav-link mb-3" href="@Url.Action("XemDonHang", "Order")">Lịch sử mua hàng</a>
        </div>
    </div>

    <div class="col-8">
        @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Thông Tin Người Dùng</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.MatKhauCu, "MẬT KHẨU CŨ")
                    @Html.PasswordFor(m => m.MatKhauCu, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.MatKhauCu, "", new { @class = "text-danger" })

                </div>

                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.MatKhauMoi, "MẬT KHẨU MỚI")
                    @Html.PasswordFor(m => m.MatKhauMoi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.MatKhauMoi, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.XacNhanMatKhauMoi, "XÁC NHÂN MẬT KHẨU MỚI")
                    @Html.PasswordFor(m => m.XacNhanMatKhauMoi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.XacNhanMatKhauMoi, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mt-3">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="LƯU THÔNG TIN" class="btn btn-danger rounded-5" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
