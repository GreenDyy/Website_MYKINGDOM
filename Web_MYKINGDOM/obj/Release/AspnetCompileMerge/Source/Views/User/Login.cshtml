
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Web_MYKINGDOM.Models.TaiKhoanKhachHang

<div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-center"><img class="img-fluid" src="~/Images/Logo/logo_mykingdom.png" /></div>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "mx-auto", style = "max-width: 400px;" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mt-3 d-flex justify-content-center align-items-center">
                            <div class="col-8">
                                @Html.TextBoxFor(m => m.TaiKhoan, "", new { @class = "form-control", @placeholder = "Tài khoản" })
                                @Html.ValidationMessageFor(m => m.TaiKhoan, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mt-3 d-flex justify-content-center align-items-center">
                            <div class="col-8">
                                @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                                @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mt-3 d-flex justify-content-center align-items-center">
                            <div class="col-8">
                                <input type="submit" name="submit" class="btn btn-danger rounded-5 fw-bold" style="width: 100%;" value="ĐĂNG NHẬP" />
                            </div>
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-center text-danger" })
                        if (TempData["ThongBao"] != null)
                        {
                            <div class="alert alert-danger text-center mt-3 text-decoration-none">
                                @TempData["ThongBao"]
                            </div>
                        }

                        <div class="form-group mt-3 d-flex justify-content-center">
                            <small class="text-center">Bạn chưa có tài khoản?<span><a class="nav-link text-danger" href="@Url.Action("Register", "User")">Đăng ký ngay</a></span></small>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

