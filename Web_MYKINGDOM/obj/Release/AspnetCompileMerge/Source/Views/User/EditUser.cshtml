@{
    ViewBag.Title = "Chỉnh sửa thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Web_MYKINGDOM.Models.KhachHang

<div class="row mt-4">

    <div class="col-4">
        <div class="">
            <h4>Tài khoản của bạn</h4>
            <a class="nav-link mb-3 fw-bold" href="@Url.Action("UserAccount", "User")">Tài khoản</a>
            <a class="nav-link mb-3" href="@Url.Action("UserAccount", "User")">Thông tin tài khoản</a>
            <a class="nav-link mb-3" href="@Url.Action("XemDonHang", "Order")">Lịch sử mua hàng</a>
        </div>
    </div>

    <div class="col-8">
        @using (Html.BeginForm("EditUser", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Thông Tin Người Dùng</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.HoTenDem, "Họ đệm", new { @class = "fw-bold" })
                    @Html.TextBoxFor(m => m.HoTenDem, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.HoTenDem, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.Ten, "Tên", new { @class = "fw-bold" })
                    @Html.TextBoxFor(m => m.Ten, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Ten, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.Email, "Email", new { @class = "fw-bold" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.SoDienThoai, "Số điện thoại", new { @class = "fw-bold" })
                    @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.DiaChi, "Địa chỉ", new { @class = "fw-bold" })
                    @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mt-3">
                    <input type="submit" name="submit" class="btn btn-danger rounded-5 fw-bold" style="width: 100%;" value="CẬP NHẬT THÔNG TIN" />
                </div>
            </div>
        }
    </div>
</div>
